@{
    Layout = "_Layout_A";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/styles/detail-style.css">
</head>
<body>
    @if (Model != null)
    {
        <form method="post" action="Leave">
            <div class="head">
                <input type="hidden" name="EventName" value="@Model.Title">
                <h1 >@Model.Title</h1>
            </div>
            <p><strong>Location:</strong> @Model.Province, @Model.District, @Model.City</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <div class="p1">
                <p>@Model.Description</p>
            </div>
            <input type="submit" value="Leave">
           
        </form>
        <form method="post" action="@Url.Action("Chat", "General", new { title = Model.Title })">
            <input type="submit" value="Chat" class="btn btn-info" onclick="return confirm('You are redirected to the Chat Page of @Model.Title');">
        </form>
    }

    else
    {
        <p>Opportunity not found.</p>
    }

</body>
</html>
