@{
    Layout = "_Layout_A";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/styles/detail-style.css">
</head>
<body>
    @if (Model != null)
    {
        <form>
            <div class="head">
                <input type="hidden" name="title" value="@Model.Title">
                <h1>@Model.Title</h1>
            </div>
            <p><strong>Location:</strong> @Model.Province, @Model.District, @Model.City</p>
            <p><strong>Requirement(Team/Blood Group):</strong> @Model.Team, @Model.BloodGroup</p>
            <p><strong>Contact:</strong> @Model.UserEmail</p>
            <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
            <div class="p1">
                <p>@Model.Description</p>
            </div>
        </form>
    }
    else
    {
        <p>Opportunity not found.</p>
    }
</body>
</html>
