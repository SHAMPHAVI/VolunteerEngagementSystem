@{
    Layout = "_Layout_A";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/styles/detail-style.css">
</head>
<body>
    @if (Model != null)
    {
        <form>
            <div class="head">
                <input type="hidden" name="EventName" value="@Model.Title">
                <h1 >@Model.Title</h1>
            </div>
            <p><strong>Location:</strong> @Model.Province, @Model.District, @Model.City</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <div class="p1">
                <p>@Model.Description</p>
            </div>           
        </form>
        <table class="table-container">
            <tr>
                <td>
                    <form method="post" action="@Url.Action("Reviews", "General", new { title = Model.Title })">
                        <input type="submit" value="Reviews" class="btn btn-primary">
                    </form>
                </td>
                <td>
                    <form method="post" action="@Url.Action("EventPhotos", "General", new { title = Model.Title })">
                        <input type="submit" value="Event Photos" class="btn btn-primary">
                    </form>
                </td>
            </tr>
        </table>
    }

    else
    {
        <p>Opportunity not found.</p>
    }
</body>
</html>
