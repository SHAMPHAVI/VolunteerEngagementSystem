@{
    Layout = "_Layout_A";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/styles/detail-style.css">
</head>
<body>
    @if (Model != null)
    {
        <form method="post" action="@Url.Action("Edit", "Opportunity", new { title = Model.Title })">
            <div class="header">
                <a href="Events"> <img src="~/images/Back.jpg" alt="Back" /></a>
                <h1>@Model.Title</h1>
            </div>
            <p><strong>Location:</strong> @Model.Province, @Model.District, @Model.City</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <div class="space"></div>
            <input type="submit" value="Edit">
        </form>
        <form method="post" action="@Url.Action("Delete", "Opportunity", new { title = Model.Title })">
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this opportunity?');">
        </form>
    }

    else
    {
        <p>Opportunity not found.</p>
    }
</body>
</html>
