@{
    Layout = "_Layout_A";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/styles/detail-style.css">
    <script>
        function setRating(value) {
            document.getElementById('Rating').value = value;
        }
    </script>
</head>
<body>
    @if (Model != null)
    {
        
        <form>
            <div class="head">
                <a href="Events"> <img src="~/images/Back.jpg" alt="Back" /></a>
                <h1>@Model.Title</h1>
            </div>
            <p><strong>Location:</strong> @Model.Province, @Model.District, @Model.City</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <div class="p1">
                <p>@Model.Description</p>
            </div>
        </form>
        <form method="post" action="RateEvent">
            <div class="head">
                <input type="hidden" name="EventName" value="@Model.Title">
                <input type="hidden" name="EventEmail" value="@Model.UserEmail">
            </div>
            <div class="form-group">
                <div class="rating">
                    <input type="radio" id="star1" value="1" onclick="setRating(1)">
                    <label for="star1" title="1 star"></label>
                    <input type="radio" id="star2" value="2" onclick="setRating(2)">
                    <label for="star2" title="2 stars"></label>
                    <input type="radio" id="star3" value="3" onclick="setRating(3)">
                    <label for="star3" title="3 stars"></label>
                    <input type="radio" id="star4" value="4" onclick="setRating(4)">
                    <label for="star4" title="4 stars"></label>
                    <input type="radio" id="star5" value="5" onclick="setRating(5)">
                    <label for="star5" title="5 stars"></label>
                </div>
                <input type="hidden" id="Rating" name="Rating" value="">
                <div>
                    <button class="rate" type="submit">Submit Rating</button>
                </div>
            </div>
        </form>
    }

    else
    {
        <p>Opportunity not found.</p>
    }
</body>
</html>
